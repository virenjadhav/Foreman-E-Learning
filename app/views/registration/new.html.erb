<%= form_with model: @user, url: sign_up_path do |form| %>
								
    #code for error
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div><%= message %> </div>
                <% puts("hello") %>
            <% end %>
        </div>
    <% end %>

    <div classname="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com">
    </div>
    <div classname="mb-3">
        <%= form.label :password %>
        <%= form.text_field :password, class: "form-control", placeholder: "steve@apple.com">
    </div>
    <div classname="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.text_field :password_confirmation, class: "form-control", placeholder: "steve@apple.com">
    </div>
    
    <div class="mb-3">
        <%= form.submit "sign up", class:"btn btn-primary" %>
    </div>
<% end %>
